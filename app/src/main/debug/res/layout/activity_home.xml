<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f3">

    <View
        android:id="@+id/stub_bar"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@id/home_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stub_bar"
        android:layout_marginTop="10dp"
        android:textSize="21sp"
        android:textColor="@color/black_33"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="@string/app_name"
        />

    <ImageView
        android:id="@id/home_button_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_title"
        app:layout_constraintBottom_toBottomOf="@id/home_title"
        android:layout_marginEnd="12dp"
        android:src="@drawable/test_icon"
        />

    <ImageView
        android:id="@id/home_connect_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_title"
        android:layout_marginTop="30dp"
        android:src="@drawable/home_unconnect_icon"/>

    <ImageView
        android:id="@id/home_left_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_connect_button"
        app:layout_constraintBottom_toBottomOf="@id/home_connect_button"
        android:layout_marginStart="20dp"
        android:src="@drawable/home_left_icon"
        />

    <ImageView
        android:id="@id/home_right_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/home_connect_button"
        app:layout_constraintBottom_toBottomOf="@id/home_connect_button"
        android:layout_marginEnd="20dp"
        android:src="@drawable/home_right_icon"
        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/home_connecting_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/home_connect_button"
        app:layout_constraintEnd_toEndOf="@id/home_connect_button"
        app:layout_constraintTop_toTopOf="@id/home_connect_button"
        app:layout_constraintBottom_toBottomOf="@id/home_connect_button"
        app:lottie_fileName="connecting_anim_1.json"
        android:visibility="gone"
        tools:visibility="gone"/>
    
    <RelativeLayout
        android:id="@id/home_menu_root"
        android:layout_width="0dp"
        android:layout_height="94dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/home_menu_bg"
        >

        <LinearLayout
            android:id="@id/home_menu_wifi_parent"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/home_menu_vpn_parent"
            android:layout_marginEnd="65dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@id/home_manu_wifi_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_wifi_unsel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/wifi"
                android:textSize="11sp"
                android:textColor="@color/_4D333333"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@id/home_menu_vpn_parent"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@id/home_manu_vpn_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_vpn_sel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/vpn"
                android:textSize="11sp"
                android:textColor="@color/FF8A49FF"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@id/home_menu_mine_parent"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/home_menu_vpn_parent"
            android:layout_marginStart="65dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@id/home_manu_mine_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/menu_mine_unsel"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/mine"
                android:textSize="11sp"
                android:textColor="@color/_4D333333"
                />

        </LinearLayout>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>