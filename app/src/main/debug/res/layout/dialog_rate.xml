<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#66000000"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="331dp"
        android:layout_height="185dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435"
        android:background="@color/teal_200">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp"
            >

            <ImageView
                android:id="@+id/rate_star_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/rate_star_5"
                app:layout_constraintBottom_toBottomOf="@id/rate_star_5"
                android:src="@drawable/selector_dialog_rate"/>

            <ImageView
                android:id="@+id/rate_star_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/rate_star_1"
                app:layout_constraintTop_toTopOf="@id/rate_star_5"
                app:layout_constraintBottom_toBottomOf="@id/rate_star_5"
                android:layout_marginStart="15dp"
                android:src="@drawable/selector_dialog_rate"/>

            <ImageView
                android:id="@+id/rate_star_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/rate_star_2"
                app:layout_constraintTop_toTopOf="@id/rate_star_5"
                app:layout_constraintBottom_toBottomOf="@id/rate_star_5"
                android:layout_marginStart="15dp"
                android:src="@drawable/selector_dialog_rate"/>

            <ImageView
                android:id="@+id/rate_star_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/rate_star_3"
                app:layout_constraintTop_toTopOf="@id/rate_star_5"
                app:layout_constraintBottom_toBottomOf="@id/rate_star_5"
                android:layout_marginStart="15dp"
                android:src="@drawable/selector_dialog_rate"/>

            <ImageView
                android:id="@+id/rate_star_5"
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:layout_constraintStart_toEndOf="@id/rate_star_4"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="15dp"
                android:src="@drawable/selector_dialog_rate"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/rate_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="71dp"
            android:text="Rate US"
            android:textColor="@color/black_33"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/rate_cancel_button"
            android:layout_width="130dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="20dp"
            android:background="@color/purple_200"
            android:text="Later"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:gravity="center"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>