<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_f3">

    <View
        android:id="@+id/stub_bar"
        android:layout_width="0dp"
        android:layout_height="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@id/about_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stub_bar"
        android:layout_marginTop="2dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_back"/>

    <TextView
        android:id="@id/about_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stub_bar"
        android:layout_marginTop="16dp"
        android:text="@string/more_about_us"
        android:textColor="@color/black_33"
        android:textSize="21sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@id/about_info_root"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_back"
        android:layout_marginTop="59dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@id/about_icon"
            android:layout_width="122dp"
            android:layout_height="122dp"
            android:src="@drawable/privacy_logo"/>

        <TextView
            android:id="@id/about_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/app_name"
            android:textSize="24sp"
            android:textColor="@color/black_33"
            android:textStyle="bold"
            />

    </LinearLayout>

    <TextView
        android:id="@id/about_official"
        android:layout_width="286dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_info_root"
        android:layout_marginTop="60dp"
        android:background="@drawable/about_item_bg"
        tools:text="www.xxx.com"
        android:textColor="@color/FF8A49FF"
        android:textSize="14sp"
        android:gravity="center"
        />

    <TextView
        android:id="@id/about_email"
        android:layout_width="286dp"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/about_official"
        android:layout_marginTop="10dp"
        android:background="@drawable/about_item_bg"
        tools:text="xxx@abc.com"
        android:textColor="@color/FF8A49FF"
        android:textSize="14sp"
        android:gravity="center"
        />

    <TextView
        android:id="@id/about_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="40dp"
        tools:text="current version numberï¼š1.0.4"
        android:textColor="@color/black_33"
        android:textSize="14sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>