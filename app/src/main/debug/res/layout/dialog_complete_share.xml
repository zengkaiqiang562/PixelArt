<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#66000000"
    >

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="320dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/pop_share_bc"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="46dp"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="Share"
                android:textColor="#FF333333"
                android:textStyle="bold"
                android:textSize="24sp" />
            
            <TextView
                android:id="@+id/share_pic"
                android:layout_width="180dp"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="140dp"
                android:background="@drawable/bg_share_pic"
                android:drawableStart="@drawable/pop_share_picture"
                android:drawablePadding="12dp"
                android:text="Picture"
                android:textSize="14sp"
                android:textColor="#FF333333"
                android:gravity="center_vertical"
                android:paddingStart="48dp"
                />

        </RelativeLayout>
        

        <ImageView
            android:id="@+id/close"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/pop_close"
            />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>