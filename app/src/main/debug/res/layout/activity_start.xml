<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/grey_f3">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@id/start_anim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="114dp"
        app:lottie_fileName="start_anim.json"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/start_anim"
        android:layout_marginTop="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@id/start_loop_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Individual Configuring..."
            android:textSize="16sp"
            android:textColor="@color/black_33"
            />

        <TextView
            android:id="@id/start_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            tools:text="(95%)"
            android:textSize="16sp"
            android:textColor="@color/black_33"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@id/start_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textStyle="bold"
            android:textSize="24sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black_33"
            />

        <TextView
            android:id="@id/start_subname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="@string/start_subname"
            android:textSize="14sp"
            android:textColor="@color/black_33"
            />

    </LinearLayout>

</RelativeLayout>