<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#66000000"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="331dp"
        android:layout_height="236dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.435"
        android:background="@drawable/dialog_common_bg">

        <ImageView
            android:id="@id/connected_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="20dp"
            android:src="@drawable/dialog_guide_icon"
            />

        <TextView
            android:id="@id/connected_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/connected_icon"
            android:layout_marginTop="10dp"
            android:text="@string/dialog_text_guide"
            android:textSize="16sp"
            android:textColor="@color/black_33"
            />
        
        <TextView
            android:id="@id/connected_test_button"
            android:layout_width="286dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/connected_text"
            android:layout_marginTop="20dp"
            android:background="@drawable/dialog_yes_bg"
            android:gravity="center"
            android:text="@string/dialog_speed_test"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@id/connected_later_button"
            android:layout_width="286dp"
            android:layout_height="40dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/connected_test_button"
            android:layout_marginTop="10dp"
            android:background="@drawable/dialog_no_bg"
            android:gravity="center"
            android:text="@string/dialog_later"
            android:textColor="@color/FF8A49FF"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>